<div id="login_form" class="container">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center" style="margin-top: 100px;">Ingresa</h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, label: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", label: "Contraseña" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, label: "Recuérdame" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Ingresar", class: "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>
</div>

